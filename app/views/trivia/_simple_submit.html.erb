
<%= form_for :data, url: trivia_simplesubmit_path do |f| %>


    <%= hidden_field_tag :song_id, song.id %>

<div class="card">
<div class="card-body">
        <%= f.label "Anime name: " %>
    <div class="row">
        <div class="col-md-3">
            <%= f.text_field :answer, :data => {:autocomplete => trivia_autocomplete_song_source_name_path}, class: "form-control" %>
        </div>

        <div class="col-md-3">
            <%= f.submit "submit", class: "btn btn-primary"%>
        </div>

        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            Hint
        </button>
    </div>
</div>
</div>
<% end %>




<div class="row">
<div class="col-md-8">
<div class="collapse" id="collapseExample">
<div class="card card-body">
    Possible Answers:
    <% @possible_songs.each do |possible_song|%>  
        <%= button_to possible_song.source_name, trivia_simplesubmit_path, method: :post, params: { :song_id => song.id, :data => {:answer => possible_song.source_name} } %>
    <% end %>
</div>
</div>
</div>
</div>

