<%= link_to 'Back', :back, class: "btn btn-small btn-primary" %>

<div class="card">
<div class="card-body">

    <h1><%=  @source.name %> - <%=  @source.period %></h1>
    <h2>Songs</h2>
        <table class="songs table">
            <th>Title</th>
            <th>Type</th>
        <% @source.songs.each do |song|%>
        
        <tr>
                <td><%= link_to song.song_title, song %></td>
                <td><%=  song.song_type %></td>
        </tr>

        <% end %>
        </table>

</div>
</div>

