<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
            <div class="panel panel-default">

                <div class="panel-body">

                    <p class="h1"><%= @user.name %></p>
                    
                    Join date: <%= @user.created_at %>

                </div>
            </div>
    </section>
  </aside>
  <div class="col-md-8">
  
        <% if @user.playlists.any? %>
        <h3>Playlists</h3>
        <table class="playlists table">
            <th>Name</th>
            <th>Description</th>
            <th>Creator</th>
            <th>Difficulty</th>
            <th>Plays</th>
        <%= render @playlists, partial: 'playlists/playlist' %>
        </table>
        <%= will_paginate @playlists %>
        

        <% end %>

  </div>
</div>

